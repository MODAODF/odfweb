{
    "type": "object",
    "properties": {
        "api": {
            "type": "object",
            "properties": {
                "key": {
                    "type": "string",
                    "pattern": "^[0-9a-fA-F]{32}$"
                },
                "token": {
                    "type": "string",
                    "pattern": "^[0-9a-fA-F]{64}$"
                }
            }
        },
        "board": {
            "type": "string",
            "pattern": "^\\w{1,}$"
        },
        "uidRelation": {
            "type": "object",
            "comment": "Relationship between Trello and Nextcloud usernames",
            "example": {
                "johndoe": "admin"
            }
        },
        "owner": {
            "type": "string",
            "required": true,
            "comment": "Nextcloud owner username"
        },
        "color": {
            "type": "string",
            "required": true,
            "pattern": "^[0-9a-fA-F]{6}$",
            "comment": "Default color for the board. If you don't inform, the default color will be used.",
            "default": "0800fd"
        }
    }
}